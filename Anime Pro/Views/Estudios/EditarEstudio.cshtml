@model EstudioEdicionModel
<h3>Editar Estudio</h3>

<hr />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post" asp-controller="Estudios" asp-action="EditarEstudio">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Nombre">Nombre</label>
                        <input asp-for="Nombre" type="text" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
            <div class="col-md-6">
                <img src="@Model.ImagenUrl" />
            </div>
        </div>
        

    </div>
</div>