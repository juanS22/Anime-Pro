@model EstudioCreacionModel
<h3>Nuevo Estudio</h3>

<hr />
<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-controller="Estudios" asp-action="NuevoEstudio">
            <div class="form-group">
                <label asp-for="Nombre">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>Imagen</label>
                <input asp-for="Imagen" class="form-control" type="file" />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>

    </div>
</div>