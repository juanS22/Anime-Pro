@model PersonajeEdicionModel
<h3>Eliminar Personaje</h3>
<hr />
<form method="post" asp-controller="Personajes" asp-action="EliminarPersonaje">
    <h4>Esta seguro de eliminar el Personaje:</h4>
    <h4>Id: @Model.Id</h4>
    <h4>Nombre: @Model.Nombre</h4>
    <input type="hidden" asp-for="Id" />
    <br />
    <button type="submit" class="btn btn-danger">Si</button>
    <a asp-controller="Personajes" asp-action="Index" class="btn btn-secondary">No</a>
</form>