@model PersonajeEdicionModel
<h3>Ver Personaje</h3>

<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" type="text" class="form-control" disabled />

                </div>
                <div class="form-group">
                    <label asp-for="FechaLanzamiento"></label>
                    <input asp-for="FechaLanzamiento" type="date" class="form-control" disabled />

                </div>
                <div class="form-group">
                    <label asp-for="Biografia"></label>
                    <textarea asp-for="Biografia" rows="10" class="form-control" disabled></textarea>

                </div>

            </div>
        </div>
        <a asp-controller="Series" asp-action="Index" class="btn btn-primary mt-5">Volver</a>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <img src="@Model.ImagenUrl" style="max-width :60%" />
            </div>
        </div>


    </div>
</div>
