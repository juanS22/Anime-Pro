<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Anime Pro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <div class="div-uno">
            <a class="navbar-brand" href="#">Anime Pro</a>
        </div>
        <div class="div-dos">
            <div class="float-right mt-3 mr-5">
            <a href="#">Salir</a>
            </div>
            
        </div>
    </header>
    <div class="div-tres">
        <ul class="nav flex-column mt-3">
            <li class="nav-item menu-seleccionado">
                <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Inicio</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Series" asp-action="Index"><i class="bi bi-film"></i> Biblioteca de Anime</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="bi bi-file-earmark-play"></i> Animes en Emisión</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Generos" asp-action="Index"><i class="bi bi-camera-reels"></i> Géneros</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Estudios" asp-action="Index"><i class="bi bi-building"></i> Estudios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Personajes" asp-action="Index"><i class="bi bi-person-workspace"></i> Ranking de Personajes</a>
            </li>
        </ul>
    </div>
    <div class="div-cuatro p-5">
        @RenderBody()
    </div>
 
            
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
</body>
</html>
